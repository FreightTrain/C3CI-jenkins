#!/bin/bash

JOB_DIR=/var/vcap/jobs/jenkins_master
RUN_DIR=/var/vcap/sys/run/jenkins_master
LOG_DIR=/var/vcap/sys/log/jenkins_master
PIDFILE=$RUN_DIR/install_dependencies.pid

export HOME=/root

# List of packages, provided by BOSH manifest
export PKG_TO_INSTALL="<%= p("os.packages").join(' ') %>"

# function to test for a lock
# expects the lock file as the first argument
function f_lock_test {

lock_pid_file=$1
# error checking
if [[ ${lock_pid_file} == "" ]]
  then
    echo "no lock file argument provided"
    return 1
fi

if [ -e ${lock_pid_file} ]
  then
    existing_pid=`cat ${lock_pid_file}`
    if kill -0 ${existing_pid} > /dev/null
      then
        echo "Process already running"
        return 1
    else
      rm ${lock_pid_file}
    fi
fi
echo $$  > ${lock_pid_file}
}

# PID/lock - we only want one instance running.
f_lock_test ${PIDFILE}

mkdir -p ${LOG_DIR}

aptitude update

while true
  do
    for PKG in ${PKG_TO_INSTALL}
      do
        if  dpkg -s ${PKG} > /dev/null
          then true
          else
            aptitude install -y ${PKG}
        fi
      done
    ## Allow passwordless sudo for vcap, for stemcell building
    if grep -q 'vcap ALL=NOPASSWD: ALL' /etc/sudoers
      then true
    else
      echo 'vcap ALL=NOPASSWD: ALL' >> /etc/sudoers
    fi
    ## Install symlink for ovftool, necessary as stemcell build uses sudo
    if test -L /usr/local/bin/ovftool
      then true
    else
      ln -s /var/vcap/packages/ovftool/ovftool /usr/local/bin/ovftool
    fi
  sleep 60
  done
